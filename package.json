{
	"name": "defi",
	"version": "0.13.0",
	"description": "Decentralized Finance",
	"private": true,
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"format": "prettier --write --plugin-search-dir=. .",
		"testnet": "export VITE_NODE_ENV=dev && svelte-kit dev",
		"polyqa": "export VITE_NODE_ENV=qa && svelte-kit dev",
		"mainnet": "export VITE_NODE_ENV=production && svelte-kit dev",
		"check:eslint": "eslint --fix --ignore-path .gitignore .",
		"check:prettier": "prettier --check --plugin-search-dir=. .",
		"check:svelte": "tsc && svelte-check --tsconfig tsconfig.json",
		"prepare": "git config core.hooksPath .githooks",
		"lint": "pnpm check:prettier && pnpm check:svelte && pnpm check:eslint",
		"test": "playwright test"
	},
	"lint-staged": {
		"*": [
			"prettier --write --plugin-search-dir=. -u",
			"eslint --fix --ignore-path .gitignore --config .eslintrc"
		]
	},
	"devDependencies": {
		"@playwright/test": "^1.19.0",
		"@sveltejs/adapter-netlify": "^1.0.0-next.50",
		"@sveltejs/kit": "1.0.0-next.294",
		"@types/three": "^0.138.0",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"autoprefixer": "^10.4.2",
		"eslint": "^7.32.0",
		"eslint-plugin-svelte3": "^3.2.0",
		"lint-staged": "^12.3.5",
		"playwright": "^1.19.0",
		"postcss": "^8.4.6",
		"prettier": "^2.5.1",
		"prettier-plugin-tailwindcss": "^0.1.7",
		"svelte": "^3.44.3",
		"svelte-check": "^2.4.5",
		"svelte-eslint-parser": "^0.15.0",
		"svelte-preprocess": "^4.9.8",
		"tailwindcss": "^3.0.22",
		"tslib": "^2.3.1",
		"typescript": "^4.5.4"
	},
	"dependencies": {
		"@fortawesome/free-brands-svg-icons": "^5.15.3",
		"@fortawesome/free-solid-svg-icons": "^5.15.3",
		"bignumber.js": "^9.0.1",
		"chart.js": "^3.7.1",
		"ethers": "5.5.1",
		"svelte-fa": "^2.3.3",
		"svelte-i18n": "^3.3.9",
		"svelte-loading-spinners": "^0.1.7",
		"svelte-notifications": "^0.9.91",
		"svelte-simple-modal": "^1.0.2",
		"three": "^0.138.3"
	},
	"type": "module"
}
